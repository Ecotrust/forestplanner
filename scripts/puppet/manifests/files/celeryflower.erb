; ==============================================
;  celery flower service 
;  https://github.com/mher/flower
; ==============================================

[program:celeryflower]
command=/usr/local/venv/lot/bin/python /usr/local/apps/forestplanner/lot/manage.py celery flower --url_prefix=flower
directory=/usr/local/apps/forestplanner/lot
user=<%= user %>
numprocs=1
stdout_logfile=/usr/local/apps/forestplanner/logs/celeryflower.log
stderr_logfile=/usr/local/apps/forestplanner/logs/celeryflower.log
autostart=true
autorestart=true
startsecs=10

; Need to wait for currently executing tasks to finish at shutdown.
; Increase this if you have very long running tasks.
stopwaitsecs = 600
